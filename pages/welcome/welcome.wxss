page {
	height: 100%;
	background-color: #b3d4db;
}

.container {
	display: flex;
	/* 可以使内容垂直排列 */
	flex-direction: column;
	/* 内容居中 */
	align-items: center;
	background-color: #b3d4db;
}

.avatar {
	width: 200rpx;
	height: 200rpx;
	margin-top: 160rpx;
}

.motto {
	margin-top: 100rpx;
	font-size:32rpx;
	font-weight: bold;
}

.journey-container {
	margin-top: 200rpx;
	border: 1px solid #405f80;
	width: 200rpx;
	height: 80rpx;
	border-radius: 5px;
	text-align: center;
}

.journey {
	font-size: 22rpx;
	font-weight: bold;
	line-height:80rpx;
	color: #405f80;
}
